@model Clean.Arc.Application.ViewModels.CourseViewModel

<div class="container body-content" >
    <div class="row course-content">
        @foreach (var courses in Model.Course)
        { 
            <div class="course-image-container">
                <div class="course-image" style="background-image: url(@courses.ImageURL)">
                </div>
                <span>@courses.Name</span>
            </div>
        }

    </div>
</div>